#include <iostream>
using namespace std;
int main()
{
    int n, m;
    cout << "Enter the number of rows and columns you want in rectangle" << endl;
    cin >> n >> m;
    for (int i = 1; i <= n; i++)
    {
        if (i > 1 && i < n)
        {
            for (int j = 1; j <= m; j++)
            {
                if (j != 1 && j != m)
                {
                    cout << " ";
                }
                else
                {
                    cout << "*";
                }
            }
        }
        else
        {
            for (int j = 1; j <= m; j++)
            {
                cout << "*";
            }
        }
        cout << endl;
    }

    return 0;
}
